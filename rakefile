require 'bundler'
Bundler.require

Dir.glob(File.dirname(__FILE__) + '/config/*') {|file| require file}
Dir.glob(File.dirname(__FILE__) + '/lib/*') {|file| require file}

desc 'scrap all the venues for a given city and store on the db'
task :scrap do
  state = ENV['state'].upcase
  city = ENV['city'].upcase

  puts "scrapping data for #{city} - #{state}"

  bot = Sodexo::Bot.new
  bot.run(state, city)
end

desc 'geocode all the venues in the database'
task :geocode do
  Sodexo::Geocoder.new.run
end
